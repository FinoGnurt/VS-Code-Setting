{
  "workbench.iconTheme": "material-icon-theme", // Icon VS Code
  "editor.minimap.enabled": false, // Tắt Minimap
  "editor.fontLigatures": true, // Bật: ==>, ===, >=, <=
  "editor.cursorBlinking": "expand", // Tùy chỉnh thanh text nhấp nháy
  "editor.smoothScrolling": true, // Bật làm mượt thanh cuộn
  "editor.cursorSmoothCaretAnimation": "on", // Bật làm mượt con trỏ chuột
  "editor.suggest.preview": true, // Bật xem trước code khi được gợi ý code
  "javascript.inlayHints.parameterNames.enabled": "all", // Bật xem trước code khi được gợi ý code trong JavaScripts
  "typescript.inlayHints.parameterNames.enabled": "all", // Bật xem trước code khi được gợi ý code trong TypeScripts
  "editor.guides.bracketPairs": "active", // Hiển thị cặp dấu ngoặc khi bạn đặt con trỏ
  "editor.bracketPairColorization.enabled": true, // Tắt tiêu đề giao diện VS Code
  "editor.fontFamily": "SF Mono Ligatures", // Font chữ (2 font ok là: SF Mono Ligatures và Jetbrains Mono)
  "editor.lineHeight": 2, // Độ giãn cách các dòng
  "editor.fontSize": 16, // Kích cỡ chữ
  "editor.mouseWheelScrollSensitivity": 6, // Độ nhạy con lăn

  // Code Settings Evondev
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.inlineSuggest.enabled": true,
  "editor.formatOnSave": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html"
  },
  "emmet.triggerExpansionOnTab": true,
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "eslint.alwaysShowStatus": true,
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "editor.wordWrapColumn": 100,

  // Customize VS Code by CSS
  // "vscode_custom_css.imports": [
  //   "file:///C:/Users/Fino/Documents/Microsoft_VS_Code/Customize/Styles.css"
  // ],

  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "hidden",
  "vscode-pets.petSize": "large",
  "vscode-pets.theme": "beach",

  //Custom Terminal
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.lineHeight": 1.4,
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontWeight": "200",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyleInactive": "none",
  "terminal.integrated.cursorWidth": 3,
  "terminal.integrated.cursorStyle": "line",

  //Custom Animation
  "animations.Enabled": true,
  "animations.Install-Method": "Apc Customize UI++",
  "apc.imports": [
    "file:///c:/Users/Fino/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.3/dist/updateHandler.js"
  ],

  //
  "explorer.compactFolders": false,
  "vscodeGoogleTranslate.preferredLanguage": "Vietnamese",
  "workbench.editor.enablePreview": false,
  "git.suggestSmartCommit": false,
  "rapidapi.terminalLink.enabled": false,

  //Setting language Vietnamese for Spell Checker
  "cSpell.language": "en,vi",
  "cSpell.dictionaries": ["vietnamese"],
  "workbench.colorTheme": "Dracula Theme"

